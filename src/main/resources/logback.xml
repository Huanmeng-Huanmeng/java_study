<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false" scan="false" scanPeriod="5 seconds">
    <jmxConfigurator/>

    <property name="LOG_PROFILE" value="helloParent"/>
    <property name="LOG_HOME" value="logs"/>
    <property name="DATA_CACHE_HOME" value="logs"/>
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date{HH:mm:ss.SSS}] [%thread] [traceId:%X{traceId}] [%-5level] [%logger{100}:%line]: %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_HOME}/sanywind.${LOG_PROFILE}.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>${LOG_HOME}/%d{yyyy-MM-dd}/sanywind.${LOG_PROFILE}.%i.zip
            </FileNamePattern>
            <MaxHistory>100</MaxHistory>
            <TimeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <MaxFileSize>10MB</MaxFileSize>
            </TimeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
            <pattern>[%date{HH:mm:ss.SSS}] [%thread] [traceId:%X{traceId}] [%-5level] [%logger{100}:%line]: %msg%n</pattern>
        </layout>
    </appender>

    <logger name="com.study" level="debug">
    </logger>


    <root level="info">
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
    </root>
</configuration>
